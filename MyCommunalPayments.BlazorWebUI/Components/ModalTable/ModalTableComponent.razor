@typeparam T

<EditForm Model="@ViewModel" OnValidSubmit="@SaveEvent">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div>
        <div class="row">
            <div class="col mt-2">
                <h5>
                    @TableTitleFragment
                </h5>
            </div>
        </div>
        <table class="table table-sm table-bordered table-hover">
            @if(TableHeaderFragment != null)
            {
                <thead class="table-dark">
                    <tr>
                        @TableHeaderFragment
                    </tr>
                </thead>
            }
            
            <tbody>
                <tr>
                    @TableBodyFragment
                </tr>
            </tbody>
        </table>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Сохранить</button>
            @AnotherButton
        </div>
    </div>
</EditForm>


    @code {
        [Parameter] public RenderFragment TableTitleFragment { get; set; }
        [Parameter] public RenderFragment TableHeaderFragment { get; set; }
        [Parameter] public RenderFragment TableBodyFragment { get; set; }
        [Parameter] public T ViewModel { get; set; }
        [Parameter] public EventCallback SaveEvent { get; set; }
        [Parameter] public RenderFragment AnotherButton { get; set; }
    }
