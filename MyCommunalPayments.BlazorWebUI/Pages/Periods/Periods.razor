@page "/Periods/periods"

@inherits PeriodsBase

@if (periods == null)
{
    <Spinner></Spinner>
}
else
{
    <!-- Форма -->
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <h2 class="text-center"> Расчетные периоды </h2>
                <!--Добавление нового периода-->
                <div class="row mb-3">
                    <div class="col">
                        <button class="btn btn-success" @onclick="()=>modal.Open()">Добавить</button>
                    </div>
                </div>
                <!--  Таблица с периодами  -->
                <table class="table table-sm table-bordered table-hover ">
                    <!--Заголовок таблицы-->
                    <thead class="table-dark text-center">
                        <tr>
                            <th scope="col" class="w-auto text-center">Год</th>
                            <th scope="col" class="w-auto">Расчетный период</th>
                            <th scope="col" class="w-auto text-right"></th>
                        </tr>
                    </thead>
                    <!--Тело таблицы-->
                    @foreach (var item in periods)
                    {
                        <tbody>
                            <tr>
                                <!--Год-->
                                <td>
                                    <div class="text-center">
                                        @item.Year
                                    </div>

                                </td>
                                <!--Количество-->
                                <td>
                                    <div>
                                        @item.Month
                                    </div>

                                </td>
                                <!--Блок кнопок-->
                                <td>
                                    <div class="text-right">
                                        <button class="btn btn-sm btn-info" @onclick="(() => Edit(item))">Изменить</button>
                                        <button class="btn btn-sm btn-danger" @onclick="(() => Remove(item))">Удалить</button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
}


<!-- Modal -->
<Modal @ref="modal" CloseWindow="CloseModal">
    <Title>Добавление нового расчетного периода</Title>
    <Body>
        <div class="col mb-3">
            <input class="form-control" placeholder="Расчетный год" @bind-value="@year" />
        </div>
        <!--Период-->
        <div class="col mb-3">
            <select class="form-control" placeholder="Период" @bind="month">
                @foreach (var item in Enum.GetValues(typeof(PeriodsName)))
                {
                    <option>@item</option>
                }
            </select>
        </div>
    </Body>
    <Footer>
        <button type="button" class="btn btn-sm btn-primary" @onclick="Add">Сохранить</button>
    </Footer>
</Modal>

